    <main id="main">
        <div>
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-12">
                    <div class="form h-100" style="height: 100%; padding: 95px;">
                        <h3>Post Something</h3>
                        <div class="row" id="blog-form">
                            <div class="col-md-6 form-group mb-3">
                                <label for="" class="col-form-label">Title</label>
                                <input type="text" class="form-control" name="title" id="title"
                                    placeholder="  Post Title">
                                <div class="invalid-feedback">
                                    Please add a title to post.
                                </div>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label for="topic" class="col-form-label">Topic</label>
                                <select class="custom-select" id="topic" name="topic">
                                    <option selected>Choose...</option>
                                    <option value="Science">Science</option>
                                    <option value="Math">Math</option>
                                    <option value="Maeketing">Marketing</option>
                                    <option value="Web Development">Web Development</option>
                                    <option value="Data Science">Data Science</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please choose a topic.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="postImg" class="col-form-label">Post Image</label>
                                <input type='file' class="form-control" id="postImg" name="postImg">
                                <div class="invalid-feedback">
                                    Please choose a valid picture.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <img id="selected-image" width="250" height="150" src="#" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label for="post" class="col-form-label">Post *</label>
                                <textarea class="form-control" name="post" id="postBlog" cols="30" rows="4"
                                    placeholder="Write your blog"></textarea>
                                <div class="invalid-feedback">
                                    Please write some content.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <button id="post" class="btn btn-primary rounded-0">Post your Blog</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <div id="result">

                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div id="newposts" class="col-md-12">
                    <div class="form h-100" style="height: 100%; padding: 95px;">

                        <button id="post_show" class="btn btn-primary rounded-0">All posts</button>

                        <div>
