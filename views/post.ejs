<body>
    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <div class="profile">
                <img src="/assets/img/profile-img.jpg" id="photo" alt="" class="img-fluid rounded-circle">
                <h1 class="text-light"><a href="/views/profile.html">Alex Smith</a></h1>
